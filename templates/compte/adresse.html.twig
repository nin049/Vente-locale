{% extends 'base.html.twig' %}

{% block title %}Mon adresse{% endblock %}

{% block body %}
<div class="container mx-auto p-4 max-w-2xl">
    <div class="mb-4">
        <a href="{{ path('app_mon_compte') }}" class="text-blue-600 hover:text-blue-800 inline-flex items-center">
            <i class="fas fa-arrow-left mr-2"></i>Retour à mon compte
        </a>
    </div>

    <div class="bg-white shadow-lg rounded-lg p-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">
            {% if user.adresse %}
                Modifier mon adresse
            {% else %}
                Ajouter mon adresse
            {% endif %}
        </h1>

        <!-- Messages flash -->
        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }} mb-4 p-4 rounded-lg {% if label == 'success' %}bg-green-100 text-green-700 border border-green-200{% elseif label == 'error' %}bg-red-100 text-red-700 border border-red-200{% endif %}">
                {% for message in messages %}
                    <p>{{ message }}</p>
                {% endfor %}
            </div>
        {% endfor %}

        {% if user.adresse %}
            <div class="bg-blue-50 p-4 rounded-lg mb-6">
                <h2 class="text-lg font-semibold text-blue-900 mb-2">Adresse actuelle</h2>
                <div class="text-blue-800">
                    <p class="font-medium">{{ user.adresse.rue }}</p>
                    <p>{{ user.adresse.codePostal }} {{ user.adresse.ville }}</p>
                </div>
            </div>
        {% endif %}

        {{ form_start(form) }}
        
        <div class="space-y-4">
            <div>
                {{ form_label(form.rue, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                {{ form_widget(form.rue) }}
                {{ form_errors(form.rue) }}
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    {{ form_label(form.codePostal, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.codePostal) }}
                    {{ form_errors(form.codePostal) }}
                </div>

                <div>
                    {{ form_label(form.ville, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.ville) }}
                    {{ form_errors(form.ville) }}
                </div>
            </div>
        </div>

        <div class="flex items-center justify-between mt-6">
            <div class="flex space-x-4">
                {{ form_widget(form.submit) }}
                <a href="{{ path('app_mon_compte') }}" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                    Annuler
                </a>
            </div>
            
            {% if user.adresse %}
                <button type="button" class="bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded transition duration-200" onclick="confirmDeleteAddress()">
                    <i class="fas fa-trash mr-2"></i>Supprimer l'adresse
                </button>
            {% endif %}
        </div>

        {{ form_end(form) }}

        {% if user.adresse %}
            <!-- Formulaire de suppression caché -->
            <form id="deleteAddressForm" action="{{ path('app_compte_adresse_supprimer') }}" method="post" style="display: none;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete-address') }}">
            </form>
        {% endif %}
    </div>
</div>

<script>
function confirmDeleteAddress() {
    if (confirm('Êtes-vous sûr de vouloir supprimer votre adresse ? Cette action est irréversible.')) {
        document.getElementById('deleteAddressForm').submit();
    }
}
</script>
{% endblock %}
