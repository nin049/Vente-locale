{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord - Administration{% endblock %}

{% block admin_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Tableau de bord</h1>
    <small class="text-muted">{{ "now"|date("d/m/Y H:i") }}</small>
</div>

<!-- Statistiques -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-warning">
            <div class="card-body text-center">
                <h2 class="text-warning mb-1">{{ stats.signalements_en_attente }}</h2>
                <p class="card-text">En attente</p>
                <small class="text-muted">signalements</small>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-success">
            <div class="card-body text-center">
                <h2 class="text-success mb-1">{{ stats.signalements_traites }}</h2>
                <p class="card-text">Traités</p>
                <small class="text-muted">signalements</small>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-danger">
            <div class="card-body text-center">
                <h2 class="text-danger mb-1">{{ stats.signalements_rejetes }}</h2>
                <p class="card-text">Rejetés</p>
                <small class="text-muted">signalements</small>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card border-primary">
            <div class="card-body text-center">
                <h2 class="text-primary mb-1">{{ stats.total_signalements }}</h2>
                <p class="card-text">Total</p>
                <small class="text-muted">signalements</small>
            </div>
        </div>
    </div>
</div>

<!-- Actions rapides -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Actions rapides</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <a href="{{ path('admin_signalements', {statut: 'en_attente'}) }}" class="btn btn-warning me-2 mb-2">
                            <i class="fas fa-clock me-1"></i>
                            Voir les signalements en attente ({{ stats.signalements_en_attente }})
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="{{ path('admin_signalements') }}" class="btn btn-primary mb-2">
                            <i class="fas fa-list me-1"></i>
                            Tous les signalements
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Derniers signalements -->
{% if derniers_signalements %}
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Derniers signalements en attente</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-admin">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Produit</th>
                        <th>Nature</th>
                        <th>Signalé par</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for signale in derniers_signalements %}
                    <tr>
                        <td>
                            <small>{{ signale.dateSignalement|date('d/m/Y H:i') }}</small>
                        </td>
                        <td>
                            {% if signale.produit %}
                                <strong>{{ signale.produit.nom|slice(0, 30) }}{% if signale.produit.nom|length > 30 %}...{% endif %}</strong>
                            {% else %}
                                <em class="text-muted">Produit supprimé</em>
                            {% endif %}
                        </td>
                        <td>
                            {% if signale.signalement %}
                                <span class="badge bg-secondary">{{ signale.signalement.natureSignalement }}</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if signale.signalePar %}
                                {{ signale.signalePar.prenom }} {{ signale.signalePar.nom }}
                            {% else %}
                                <em class="text-muted">Utilisateur supprimé</em>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('admin_signalement_detail', {id: signale.id}) }}" 
                               class="btn btn-sm btn-outline-primary btn-action">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        {% if derniers_signalements|length == 5 %}
        <div class="text-center mt-3">
            <a href="{{ path('admin_signalements', {statut: 'en_attente'}) }}" class="btn btn-outline-primary">
                Voir tous les signalements en attente
            </a>
        </div>
        {% endif %}
    </div>
</div>
{% else %}
<div class="card">
    <div class="card-body text-center">
        <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
        <h5>Aucun signalement en attente</h5>
        <p class="text-muted">Tous les signalements ont été traités !</p>
    </div>
</div>
{% endif %}
{% endblock %}
