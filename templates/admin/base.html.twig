{% extends 'base.html.twig' %}

{% block title %}Administration - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Fix URGENT pour les soulignements dans la navbar */
        nav a {
            text-decoration: none !important;
            text-decoration-line: none !important;
            text-underline-offset: unset !important;
            border-bottom: none !important;
        }
        
        nav a:hover, nav a:focus, nav a:visited, nav a:active {
            text-decoration: none !important;
            text-decoration-line: none !important;
            border-bottom: none !important;
        }
        
        /* Supprimer le soulignement par défaut de Bootstrap sur TOUS les liens de la navbar */
        nav .nav-link, nav a.nav-link {
            text-decoration: none !important;
        }
        
        /* Fix pour la navbar qui utilise Tailwind */
        nav {
            position: relative !important;
            z-index: 1050 !important;
        }
        
        /* Restaurer les styles Tailwind pour la navbar */
        nav .group:hover .opacity-0 {
            opacity: 1 !important;
        }
        
        nav .group:hover .invisible {
            visibility: visible !important;
        }
        
        nav .transition-colors {
            transition: color 0.2s ease !important;
        }
        
        nav .transition-all {
            transition: all 0.2s ease !important;
        }
        
        nav .hover\:text-indigo-600:hover {
            color: #4f46e5 !important;
        }
        
        nav .hover\:bg-gray-50:hover {
            background-color: #f9fafb !important;
        }
        
        nav .hover\:bg-red-50:hover {
            background-color: #fef2f2 !important;
        }
        
        nav .hover\:bg-indigo-700:hover {
            background-color: #4338ca !important;
        }
        
        nav .hover\:opacity-80:hover {
            opacity: 0.8 !important;
        }
        
        nav .hover\:bg-gray-100:hover {
            background-color: #f3f4f6 !important;
        }
        
        /* Empêcher Bootstrap de casser les roundeds et autres classes Tailwind de la navbar */
        nav .rounded-lg {
            border-radius: 0.5rem !important;
        }
        
        nav .rounded-full {
            border-radius: 9999px !important;
        }
        
        nav .shadow-lg {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05) !important;
        }
        
        /* Styles admin spécifiques */
        .admin-sidebar {
            min-height: calc(100vh - 56px);
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
        }
        
        .admin-content {
            min-height: calc(100vh - 56px);
        }
        
        .stat-card {
            transition: transform 0.2s;
        }
        
        .stat-card:hover {
            transform: translateY(-2px);
        }
        
        .badge-status {
            font-size: 0.875rem;
        }
        
        .table-admin {
            font-size: 0.9rem;
        }
        
        .btn-action {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
        
        .admin-nav-link {
            color: #6c757d;
            text-decoration: none;
            padding: 0.5rem 1rem;
            display: block;
            border-radius: 0.25rem;
            margin-bottom: 0.25rem;
        }
        
        .admin-nav-link:hover,
        .admin-nav-link.active {
            background-color: #007bff;
            color: white;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 admin-sidebar p-3">
            <h5 class="mb-3">Administration</h5>
            <nav class="nav flex-column">
                <a class="admin-nav-link {{ app.request.get('_route') == 'admin_dashboard' ? 'active' : '' }}" 
                   href="{{ path('admin_dashboard') }}">
                    <i class="fas fa-tachometer-alt me-2"></i>Tableau de bord
                </a>
                <a class="admin-nav-link {{ app.request.get('_route') starts with 'admin_signalement' ? 'active' : '' }}" 
                   href="{{ path('admin_signalements') }}">
                    <i class="fas fa-flag me-2"></i>Signalements
                </a>
            </nav>
        </div>
        
        <!-- Contenu principal -->
        <div class="col-md-9 col-lg-10 admin-content">
            <div class="p-4">
                <!-- Messages flash -->
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                {% endfor %}
                
                {% block admin_content %}{% endblock %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
