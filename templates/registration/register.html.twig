{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Créer votre compte
        </h1>
        <p class="mt-2 text-center text-sm text-gray-600">
            Ou 
            <a href="{{ path('app_login') }}" class="font-medium text-indigo-600 hover:text-indigo-500 transition duration-150 ease-in-out">
                connectez-vous à votre compte existant
            </a>
        </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
            
                <div class="space-y-1">
                    {{ form_label(registrationForm.nom, 'Nom', {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(registrationForm.nom, {
                        'attr': {
                            'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'
                        }
                    }) }}
                    {{ form_errors(registrationForm.nom, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>

                <div class="space-y-1">
                    {{ form_label(registrationForm.prenom, 'Prénom', {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(registrationForm.prenom, {
                        'attr': {
                            'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'
                        }
                    }) }}
                    {{ form_errors(registrationForm.prenom, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>

                <div class="space-y-1">
                    {{ form_label(registrationForm.email, 'Email', {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'
                        }
                    }) }}
                    {{ form_errors(registrationForm.email, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>

                <div class="space-y-1">
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {
                        'attr': {
                            'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'
                        }
                    }) }}
                    {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>

                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        {{ form_widget(registrationForm.agreeTerms, {
                            'attr': {
                                'class': 'focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded'
                            }
                        }) }}
                    </div>
                    <div class="ml-3">
                        {{ form_label(registrationForm.agreeTerms, null, {'attr': {'class': 'text-sm text-gray-600'}}) }}
                        {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                    </div>
                </div>

                <div>
                    <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                            <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                            </svg>
                        </span>
                        S'inscrire
                    </button>
                </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
